<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    >

        <include
            android:id="@+id/toolbar"
            layout="@layout/activity_base"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/authMainTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibmplexsanskr_300"
            android:textSize="14dp"
            android:layout_marginTop="20dp" />
        <Button
            android:id="@+id/logoutBtn"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#0000CC"
            android:fontFamily="@font/ibmplexsanskr_300"
            android:text="로그아웃"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />



        <EditText
            android:id="@+id/authEmailEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="이메일"
            android:fontFamily="@font/ibmplexsanskr_300"
            android:inputType="textEmailAddress"
            android:visibility="gone" />

        <EditText
            android:id="@+id/authPasswordEditView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="비밀번호 - 6자 이상"
            android:fontFamily="@font/ibmplexsanskr_300"
            android:inputType="textPassword"
            android:visibility="gone" />

        <Button
            android:id="@+id/signBtn"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0000CC"
            android:text="가입"
            android:fontFamily="@font/ibmplexsanskr_300"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0000CC"
            android:text="로그인"
            android:fontFamily="@font/ibmplexsanskr_300"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />
        <Button
            android:id="@+id/goSignInBtn"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0000CC"
            android:fontFamily="@font/ibmplexsanskr_300"
            android:text="회원가입"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/googleLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#D3D3D3"
            android:text="구글인증"
            android:fontFamily="@font/ibmplexsanskr_300"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>