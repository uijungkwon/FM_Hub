<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:theme="@style/whiteTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0000CC" >
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FM_Hub"
                android:fontFamily="@font/giants_inline"
                android:textColor="@color/white"
                android:textSize="23dp"
                />
        </androidx.appcompat.widget.Toolbar>
        <ImageView
            android:id="@+id/movie1"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_marginTop="70dp"
            android:layout_gravity="center"
            android:src="@drawable/movie1"></ImageView>
        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="75dp"
            android:text="하이큐!! 승자와 패자"
            android:fontFamily="@font/ibmplexsanskr_400"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="85dp"
            android:fontFamily="@font/ibmplexsanskr_300"
            android:text="예매율 87.9%" />
        <View
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/ibmplexsanskr_300"
            android:text="누적관객 56,888명,당일관객 7,612명 " />
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
